{
  "name": "@rwe/actions-hlint",
  "version": "2.0.1",
  "description": "GitHub Action: Run HLint",
  "main": "dist/index.js",
  "scripts": {
    "lint": "true",
    "test": "true",
    "compile": "tsc && scripts/update-matcher-def.js",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run lint && npm run compile && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haskell/actions.git"
  },
  "keywords": [
    "Actions",
    "GitHub",
    "Haskell",
    "Lint",
    "HLint"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haskell/actions/issues"
  },
  "homepage": "https://github.com/haskell/actions#readme",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/tool-cache": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vercel/ncc": "^0.38.4",
    "typescript": "^5.9.3"
  }
}
